@model IEnumerable<ModelEF.EF.NguoiDung>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
    <script src="~/Assets/Admin/js/controller/userController.js"></script>
}
<!-- Basic table card start -->
<div class="card">
    @using (Html.BeginForm("Index", "NguoiDungs", FormMethod.Post))
    {
        <div class="card-header">
            <h5><i class="fa fa-user" style="color: blue;"></i>&nbsp;QUẢN LÝ NGƯỜI DÙNG</h5>
            <div class="card-header-right">
                <ul class="list-unstyled card-option">
                    <li><i class="fa fa fa-wrench open-card-option"></i></li>
                    <li><i class="fa fa-window-maximize full-card"></i></li>
                    <li><i class="fa fa-minus minimize-card"></i></li>
                    <li><i class="fa fa-refresh reload-card"></i></li>
                    <li><i class="fa fa-trash close-card"></i></li>
                </ul>
            </div>

        </div>
        <div class="col-lg-12 form-group" style="margin-top: 20px;">
            <div class="col-md-6">
                @Html.ActionLink("Tạo Mới", "Create", "UserAccount", new { @class = "btn btn-danger" })
            </div>
            <div class="col-md-4">
                <input type="text" value="@ViewBag.SearchString" name="searchString" placeholder="Nhập từ khoá tìm kiếm" class="form-control">
            </div>
            <div class="col-md-2">
                <input style="background: #e3782c;" type="submit" value="Tìm Kiếm" class="btn btn-default" />
            </div>
        </div>

    }

    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Họ tên</th>
                        <th>Tên truy cập</th>
                        <th>Mật khẩu</th>
                        <th>Ngày cập nhật</th>
                        <th>Trạng thái</th>
                        <th>Quản Lý</th>
                    </tr>
                </thead>
                <tbody>
                    @{ var i = 1;}
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>
                                @item.HoTen
                            </td>
                            <td>
                                @item.TenTruycap
                            </td>
                            <td>
                                @item.MatKhau
                            </td>
                            <td>
                                @item.NgayCapNhat
                            </td>
                            <td>
                                <a href="#" class="btn-active" data-id="@item.MaNguoiDung">
                                    @(item.TrangThai ? "kích hoạt" : "khoá")
                                </a>

                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.MaNguoiDung }) |
                                @Html.ActionLink("Details", "Details", new { id = item.MaNguoiDung }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.MaNguoiDung })
                            </td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>


<!-- Basic table card end -->